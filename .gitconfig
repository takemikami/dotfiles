[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitconfig.d/.gitignore

[init]
  templateDir = ~/.gitconfig.d/git-template

[alias]
  st = status
  co = checkout
  br = branch
  sw = switch
  wt = worktree
  push-origin = !CRR_BRANCH=$(git symbolic-ref --short HEAD) && git push origin $CRR_BRANCH
  push-fork = !CRR_BRANCH=$(git symbolic-ref --short HEAD) && git push fork $CRR_BRANCH
  junk-commit = !git commit --fixup=$(git log --grep='^fixup!' --invert-grep -1 --pretty=%H)
  junk-rebase = !git rebase -i $(git log --grep='^fixup!' --invert-grep -2 --pretty=%H | tail -1) --autosquash
  stack = town branch

[git-town]
	sync-feature-strategy = rebase
	push-branches = false
