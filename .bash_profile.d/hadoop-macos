# set hadoop home

export HADOOP_VERSION=3.2.0
export HIVE_VERSION=2.3.5
export SPARK_VERSION=2.4.3

export JAVA_HOME=`/usr/libexec/java_home -v 1.8`
export HADOOP_HOME=$HOME/.apache-hadoop/hadoop-${HADOOP_VERSION}
export HIVE_HOME=$HOME/.apache-hadoop/apache-hive-${HIVE_VERSION}-bin
export SPARK_HOME=~/.apache-hadoop/spark-${SPARK_VERSION}-bin-hadoop2.7

export PATH=$HADOOP_HOME/bin:$PATH
